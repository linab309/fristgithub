<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<RelativeLayout 
		android:id="@+id/page_status"
		android:layout_width="match_parent"
		android:layout_height="match_parent" 
		android:visibility="visible"
		>
		<TextView 
		    android:id="@+id/text_status"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:layout_marginLeft="0dp"
	        android:layout_marginRight="0dp"
			android:textColor="@drawable/button_font"
			android:textSize="28dp"
			android:paddingLeft="0dp"
			/>
		<Button 
		    android:id="@+id/btn_status"
		    android:layout_centerHorizontal="true"
		    android:layout_below="@id/text_status"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/selector_btn"
			android:textColor="@drawable/button_font"
			android:textSize="36dp"
			android:visibility="invisible"
		    />
	</RelativeLayout>
	<ScrollView 
		android:id="@+id/page_list"
		android:layout_width="match_parent"
		android:layout_height="match_parent" 
		android:visibility="invisible"
		>
		<LinearLayout 
			android:id="@+id/layout_list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" 
			android:orientation="vertical"
			android:paddingLeft="20dp" 
			android:paddingRight="20dp" 
			>
		</LinearLayout>
	</ScrollView>
	<ScrollView 
		android:id="@+id/page_control"
		android:layout_width="match_parent"
		android:layout_height="match_parent" 
		android:visibility="gone"
		>
		<LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content" 
			android:orientation="vertical"
			android:paddingLeft="20dp" 
			android:paddingRight="20dp" 
			>
		<TextView 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
	        android:layout_marginLeft="0dp"
	        android:layout_marginRight="0dp"
			android:text="亮度"
			android:textColor="@drawable/button_font"
			android:textSize="28dp"
			android:paddingLeft="38dp"
			/>
	    <SeekBar 
	        android:id="@+id/bar_brightness"
	        android:layout_width="match_parent"
	        android:layout_height="76dp"
	        android:minHeight="12dp"
	        android:maxHeight="12dp"
	        style="?android:attr/progressBarStyleHorizontal"
	        android:max="255"
	        android:progressDrawable="@drawable/ipod_seekbar_style"
			android:thumb="@drawable/dot"
			android:thumbOffset="38dp"
			android:paddingLeft="38dp"
			android:paddingRight="38dp"
	        />
		<TextView 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
	        android:layout_marginLeft="0dp"
	        android:layout_marginRight="0dp"
			android:text="R"
			android:textColor="@drawable/button_font"
			android:textSize="28dp"
			android:paddingLeft="38dp"
			/>
	    <SeekBar 
	        android:id="@+id/bar_r"
	        android:layout_width="match_parent"
	        android:layout_height="76dp"
	        android:minHeight="12dp"
	        android:maxHeight="12dp"
	        style="?android:attr/progressBarStyleHorizontal"
	        android:max="255"
	        android:progressDrawable="@drawable/ipod_seekbar_style"
			android:thumb="@drawable/dot"
			android:thumbOffset="38dp"
			android:paddingLeft="38dp"
			android:paddingRight="38dp"
	        />
		<TextView 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
	        android:layout_marginLeft="0dp"
	        android:layout_marginRight="0dp"
			android:text="G"
			android:textColor="@drawable/button_font"
			android:textSize="28dp"
			android:paddingLeft="38dp"
			/>
	    <SeekBar 
	        android:id="@+id/bar_g"
	        android:layout_width="match_parent"
	        android:layout_height="76dp"
	        android:minHeight="12dp"
	        android:maxHeight="12dp"
	        style="?android:attr/progressBarStyleHorizontal"
	        android:max="255"
	        android:progressDrawable="@drawable/ipod_seekbar_style"
			android:thumb="@drawable/dot"
			android:thumbOffset="38dp"
			android:paddingLeft="38dp"
			android:paddingRight="38dp"
	        />
		<TextView 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
	        android:layout_marginLeft="0dp"
	        android:layout_marginRight="0dp"
			android:text="B"
			android:textColor="@drawable/button_font"
			android:textSize="28dp"
			android:paddingLeft="38dp"
			/>
	    <SeekBar 
	        android:id="@+id/bar_b"
	        android:layout_width="match_parent"
	        android:layout_height="76dp"
	        android:minHeight="12dp"
	        android:maxHeight="12dp"
	        style="?android:attr/progressBarStyleHorizontal"
	        android:max="255"
	        android:progressDrawable="@drawable/ipod_seekbar_style"
			android:thumb="@drawable/dot"
			android:thumbOffset="38dp"
			android:paddingLeft="38dp"
			android:paddingRight="38dp"
	        />
		</LinearLayout>
	</ScrollView>

</RelativeLayout>
